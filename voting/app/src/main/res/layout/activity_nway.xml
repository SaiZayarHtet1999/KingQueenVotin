<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nway">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        style="@style/CardView.Light"
        android:layout_width="350dp"
        android:layout_height="400dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:paddingBottom="24dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/nway"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:layout_constraintDimensionRatio="H,16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/nway"
                tools:srcCompat="@drawable/nway"
                tools:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="16dp"
                android:elevation="12dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <ImageView
                    android:id="@+id/circleImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/nway"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/nway"
                    tools:srcCompat="@drawable/nway" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Ma Nway Nway Hlaing"
                app:layout_constraintBottom_toTopOf="@+id/desc"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view" />

            <TextView
                android:id="@+id/desc"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:text="Admin"
                android:textColor="#8A000000"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <ImageView
                android:id="@+id/phoneIcon"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/ic_phone_black_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view"
                tools:ignore="InvalidId" />

            <TextView
                android:id="@+id/phoneNumber"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="09693271326"
                android:textColor="#000"
                app:layout_constraintBottom_toTopOf="@+id/phoneDesc"
                app:layout_constraintStart_toEndOf="@id/phoneIcon"
                app:layout_constraintTop_toTopOf="@+id/phoneIcon" />

            <TextView
                android:id="@+id/phoneDesc"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Mobile"
                android:textColor="#8A000000"
                app:layout_constraintBottom_toBottomOf="@+id/phoneIcon"
                app:layout_constraintStart_toEndOf="@id/phoneIcon"
                app:layout_constraintTop_toBottomOf="@+id/phoneNumber" />

            <ImageView
                android:id="@+id/mailIcon"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/facebook"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneIcon" />

            <TextView
                android:id="@+id/mailNumber"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Nway Nway Hlaing"
                android:textColor="#000"
                app:layout_constraintBottom_toTopOf="@+id/mailDesc"
                app:layout_constraintStart_toEndOf="@id/mailIcon"
                app:layout_constraintTop_toTopOf="@+id/mailIcon" />

            <TextView
                android:id="@+id/mailDesc"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Facebook"
                android:textColor="#8A000000"
                app:layout_constraintBottom_toBottomOf="@+id/mailIcon"
                app:layout_constraintStart_toEndOf="@id/mailIcon"
                app:layout_constraintTop_toBottomOf="@+id/mailNumber" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>